{
  "name": "compassion-course",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "node scripts/generate-firebase-config.js",
    "prebuild": "node scripts/generate-firebase-config.js",
    "dev": "vite --host",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "start": "npm run preview",
    "clean": "rm -rf node_modules package-lock.json dist && npm install",
    "type-check": "tsc --noEmit",
    "grant-admin": "node scripts/grant-admin.js",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:hosting": "npm run build && firebase deploy --only hosting"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@excalidraw/excalidraw": "^0.17.0",
    "@types/dompurify": "^3.0.5",
    "@types/three": "^0.182.0",
    "cobe": "^0.6.5",
    "dompurify": "^3.3.0",
    "firebase": "^11.10.0",
    "firebase-admin": "^12.7.0",
    "framer-motion": "^12.23.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.23.0",
    "three": "^0.182.0",
    "three-globe": "^2.45.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.4.0",
    "vite": "^5.2.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.19.0"
  }
}
