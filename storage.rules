rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }
    
    function isAdminByEmail() {
      return request.auth != null && 
             request.auth.token.email != null &&
             firestore.exists(/databases/(default)/documents/admins/$(request.auth.token.email));
    }
    
    // Direct check for trusted admin email (fallback if Firestore lookup fails)
    function isTrustedAdminEmail() {
      return request.auth != null && 
             request.auth.token.email != null &&
             request.auth.token.email == 'info@compassioncf.com';
    }
    
    function isAdminUser() {
      return isAdmin() || isAdminByEmail() || isTrustedAdminEmail();
    }
    
    // Team member photos - readable by all, writable by admins
    match /team-photos/{memberId}/{fileName} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && isAdminUser();
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
